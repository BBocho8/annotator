{
  "manifest_version": 3,
  "name": "YouTube Annotator",
  "version": "1.0",
  "description": "Open a YouTube video with annotation tools.",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
